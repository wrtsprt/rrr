doctype html
html
  head
  title RRR
  meta name="viewport" content="width=device-width, initial-scale=1.0"
  = stylesheet_link_tag    "application", :media => "all"
  = javascript_include_tag "application"
  = csrf_meta_tags

body
  nav.navbar.navbar-default.navbar-fixed-top role="navigation"
    .container-fluid
      .navbar-header
        a.navbar-brand href="/"  RRR
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        - current_uri = request.env['PATH_INFO']
        ul.nav.navbar-nav
          li
            = link_to 'import', opml_import_index_path
          li
            = link_to 'subscriptions', subscriptions_path
          li
            = link_to 'read', read_mode_index_path

        ul.nav.navbar-nav.navbar-right
          - if user_signed_in?
            li.dropdown
              a.dropdown-toggle data-toggle="dropdown" href="#"
                span.glyphicon.glyphicon-user
                | Â 
                strong= current_user.email
                span.glyphicon.glyphicon-chevron-down
              ul.dropdown-menu
                li
                  .navbar-login.navbar-login-session
                    .row
                      .col-lg-12
                        p
                          =link_to 'logout', '/users/sign_out', method: :delete, class: 'btn btn-danger btn-block'
          - else
            = 'Go to signin'

  p class="notice"
    = notice
  p class="alert"
    = alert

  div class="container"
    = yield
